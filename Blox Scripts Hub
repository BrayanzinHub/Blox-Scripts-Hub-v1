-- Variáveis globais
local player = game.Players.LocalPlayer
local character = player.Character
local humanoid = character:FindFirstChildOfClass("Humanoid")
local virtualUser = game:GetService("VirtualUser")

-- Função de Auto Farm
local function autoFarm()
while true do
if humanoid and humanoid.Health > 0 then
for _, enemy in pairs(game.Workspace.Enemies:GetChildren()) do
if enemy:FindFirstChildOfClass("Humanoid") and enemy.Humanoid.Health > 0 then
character.HumanoidRootPart.CFrame = enemy.HumanoidRootPart.CFrame
wait(0.1)
virtualUser:CaptureController()
virtualUser:Button1Down(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
end
end
end
wait(1)
end
end

-- Função de Aimbot Melhorado
local function aimbot()
local mouse = player:GetMouse()
mouse.Button1Down:Connect(function()
local target = mouse.Target
if target and target.Parent:FindFirstChildOfClass("Humanoid") then
local humanoidRootPart = target.Parent:FindFirstChild("HumanoidRootPart")
if humanoidRootPart then
while mouse.Button1Down do
character.HumanoidRootPart.CFrame = humanoidRootPart.CFrame
wait(0.1)
end
end
end
end)
end

-- Função de ESP Players
local function createESP(player)
local highlight = Instance.new("Highlight")
highlight.Parent = player.Character
highlight.FillColor = Color3.new(1, 0, 0) -- cor vermelha
highlight.OutlineColor = Color3.new(1, 1, 1) -- cor branca
end

local function enableESP()
for _, player in pairs(game.Players:GetPlayers()) do
if player ~= game.Players.LocalPlayer then
createESP(player)
end
end

game.Players.PlayerAdded:Connect(function(player)
if player ~= game.Players.LocalPlayer then
player.CharacterAdded:Connect(function()
createESP(player)
end)
end
end)
end

-- Função de Teleport
local function teleportToPlayer(targetPlayer)
if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
character.HumanoidRootPart.CFrame = targetPlayer.Character.HumanoidRootPart.CFrame
end
end

local function teleportToPosition(position)
if character and character:FindFirstChild("HumanoidRootPart") then
character.HumanoidRootPart.CFrame = CFrame.new(position)
end
end

-- Função de Pegar Todos Itens
local function pegarTodosItens()
for _, item in pairs(game.Workspace.Items:GetChildren()) do
if item:IsA("Tool") then
item.Handle.CFrame = character.HumanoidRootPart.CFrame
end
end
end

-- Função de Pegar Raça V4
local function pegarRacaV4()
-- código específico para pegar raça v4
end

-- Função de Caçar Bounty Melhorada
local function cacaBounty()
while true do
local highestBounty = nil
local highestBountyPlayer = nil

for _, otherPlayer in pairs(game.Players:GetPlayers()) do
if otherPlayer ~= player and otherPlayer.leaderstats.Bounty.Value > (highestBounty or 0) then
highestBounty = otherPlayer.leaderstats.Bounty.Value
highestBountyPlayer = otherPlayer
end
end

if highestBountyPlayer then
character.HumanoidRootPart.CFrame = highestBountyPlayer.Character.HumanoidRootPart.CFrame
while highestBountyPlayer.Character.Humanoid.Health > 0 do
for _, skill in pairs({"Z", "X", "C", "V"}) do
virtualUser:CaptureController()
virtualUser:Button1Down(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
wait(0.1)
end
wait(0.1)
end
end
wait(1)
end
end

-- Função de Auto Collect Chests
local function autoCollectChests()
while true do
for _, chest in pairs(game.Workspace.Chests:GetChildren()) do
if chest:IsA("Model") then
character.HumanoidRootPart.CFrame = chest.PrimaryPart.CFrame
wait(0.1)
end
end
wait(1)
end
end

-- Função de Auto Skill
local function autoSkill()
while true do
for _, skill in pairs({"Z", "X", "C", "V"}) do
virtualUser:CaptureController()
virtualUser:Button1Down(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
wait(0.1)
end
wait(1)
end
end

-- Função de Auto Buy
local function autoBuy(itemName)
local shop = game.Workspace.Shops:FindFirstChild(itemName)
if shop then
character.HumanoidRootPart.CFrame = shop.PrimaryPart.CFrame
wait(0.1)
fireclickdetector(shop.ClickDetector)
end
end

-- Função de Auto Upgrade
local function autoUpgrade(stat)
local stats = {"Melee", "Defense", "Sword", "Gun", "Fruit"}
if table.find(stats, stat) then
game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("AddPoint", stat)
end
end

-- Interface Gráfica
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local AutoFarmButton = Instance.new("TextButton")
local AimbotButton = Instance.new("TextButton")
local ESPButton = Instance.new("TextButton")
local TeleportButton = Instance.new("TextButton")
local CollectItemsButton = Instance.new("TextButton")
local CollectChestsButton = Instance.new("TextButton")
local AutoSkillButton = Instance.new("TextButton")
local AutoBuyButton = Instance.new("TextButton")
local AutoUpgradeButton = Instance.new("TextButton")
local CacaBountyButton = Instance.new("TextButton")
local Icon = Instance.new("ImageLabel")

ScreenGui.Parent = game.CoreGui

Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
Frame.Position = UDim2.new(0.5, -100, 0.5, -200)
Frame.Size = UDim2.new(0, 200, 0, 450)

Icon.Parent = Frame
Icon.Size = UDim2.new(0, 50, 0, 50)
Icon.Position = UDim2.new(0, 75, 0, -60)
Icon.Image = "rbxassetid://<ID_DA_IMAGEM_DO_BLOX_FRUITS>" -- substitua <ID_DA_IMAGEM_DO_BLOX_FRUITS> pelo ID da imagem do Blox Fruits

local buttons = {
AutoFarmButton, AimbotButton, ESPButton, TeleportButton, CollectItemsButton, CollectChestsButton, AutoSkillButton, AutoBuyButton, AutoUpgradeButton, CacaBountyButton
}

local buttonNames = {
"Auto Farm", "Aimbot", "ESP", "Teleport", "Collect Items", "Collect Chests", "Auto Skill", "Auto Buy", "Auto Upgrade", "Caca Bounty"
}

for i, button in ipairs(buttons) do
button.Parent = Frame
button.BackgroundColor3 = Color3.new(0.1, 0.8, 0.1)
button.Size = UDim2.new(0, 180, 0, 40)
button.Position = UDim2.new(0, 10, 0, 10 + (i - 1) * 45)
button.Text = buttonNames[i]
button.TextColor3 = Color3.new(1, 1, 1)
button.MouseButton1Click:Connect(function()
if button == AutoFarmButton then
autoFarm()
elseif button == AimbotButton then
aimbot()
elseif button == ESPButton then
enableESP()
elseif button == TeleportButton then
teleportToPlayer(game.Players:FindFirstChild("PlayerName")) -- substitua "PlayerName" pelo nome do jogador alvo
elseif button == CollectItemsButton then
pegarTodosItens()
elseif button == CollectChestsButton then
autoCollectChests()
elseif button == AutoSkillButton then
autoSkill()
elseif button == AutoBuyButton then
autoBuy("ItemName") -- substitua "ItemName" pelo nome do item a ser comprado
elseif button == AutoUpgradeButton then
autoUpgrade("Melee") -- substitua "Melee" pelo nome do stat a ser melhorado
elseif button == CacaBountyButton thencacaBounty()
end
end)
end

-- Exemplo de uso
enableESP()
autoFarm()
aimbot()
pegarTodosItens()
pegarRacaV4()
cacaBounty()
autoCollectChests()
autoSkill()h
